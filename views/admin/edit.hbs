<div class="container col-md-6 mt-5 table-bordered edit">
   <form action="/admin/edit/{{toy._id}}" method="post" class=" p-3 text-center">
      <h2 class="text">Edit Toy</h2>
      <div class="form-group">
         <label class="h6">Name</label>
         <input class="form-control" type="text" name="name" value="{{toy.name}}" required>
      </div>
      <div class="form-group">
         <label class=" h6">Color</label>
         <input class="form-control" type="text" name="color" value="{{toy.color}}" required>
      </div>
      <div class="form-group">
         <label class=" h6">Price</label>
         <input class="form-control" type="text" name="price" value="{{toy.price}}" required>
      </div>
      <div class="form-group">
         <label class="h6">Size</label>
         <select name="size" class="form-control size" >
            <option value="" style="color:black">Select Size</option>
            {{#equal toy.size "M"}}
            <option value="M" selected style="color:black">M</option>
            <option value="L" style="color:black">L</option>
            <option value="XL" style="color:black">XL</option>
            {{/equal}}
            {{#equal toy.size "L"}}
            <option value="M" style="color:black">M</option>
            <option value="L" selected style="color:black">L</option>
            <option value="XL" style="color:black">XL</option>
            {{/equal}}
            {{#equal toy.size "XL"}}
            <option value="M" style="color:black">M</option>
            <option value="L" style="color:black">L</option>
            <option value="XL" selected style="color:black">XL</option>
            {{/equal}}
         </select>
      </div>
      <div class="form-group mt-3">
         <label class="h6">Image</label><br>
         <img src="{{toy.image}}" alt="" style="width: 200px; height: auto;"><br><br>
         <input class="form-control" type="text" name="image" value="{{toy.image}}" required>
      </div>
      <div class="form-group mt-3">
         <label class=" h6">Release Date</label>
         <input class="form-control" type="date" name="date" value="{{dateFormat toy.dob 'YYYY-MM-DD'}}"  required>
      </div>
      <div class="form-group mt-3">
         <label class="h6">Brand</label>
         <input class="form-control" type="text" name="brand" value="{{toy.brand}}" required>
      </div>
      <div class="form-group mt-3">
			<label class="h6">Description</label>
			<textarea class="form-control" name="description" value="" style="width: 700px; height: 200px;">{{toy.description}}</textarea>
		</div>
      <div class="form-group mt-3">
        <button class="btn btn-danger "><a href="/admin" style="text-decoration: none; font-size: 20px; color:white;">Back</a></button>
         <input class="btn btn-primary" style="font-size: 20px;" type="submit" value="Edit">
      </div>
   </form>
</div>